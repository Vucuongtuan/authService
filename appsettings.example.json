{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "Default": "Host=your-database-host; Database=your-database-name; Username=your-username; Password=your-password; SSL Mode=VerifyFull; Channel Binding=Require;"
  },
  "Pagination": {
    "DefaultPage": 1,
    "DefaultPageSize": 10,
    "MaxPageSize": 50
  },
  "Jwt": {
    "Key": "Your-Secret-Key-Must-Be-Longer-Than-32-Characters",
    "Issuer": "authModule",
    "Audience": "authModuleClient"
  },
  "Email": {
    "SmtpHost": "smtp.gmail.com",
    "SmtpPort": 587,
    "SmtpUsername": "your-email@gmail.com",
    "SmtpPassword": "your-app-password",
    "SenderName": "Auth Service",
    "SenderEmail": "your-email@gmail.com",
    "UseSsl": true
  },
  "Otp": {
    "ExpirationMinutes": 5,
    "CodeLength": 6
  },
  "CORS": {
    "AllowedOrigins": [
      "https://your-frontend-domain.com",
      "http://localhost:3000"
    ]
  }
}
