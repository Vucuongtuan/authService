@{
    Layout = null;
    var idClient = ViewData["client_id"] as string ?? "";
    var callbackClient = ViewData["callback"] as string ?? "";
    var nameClient = ViewData["name"] as string ?? "";
    var logoClient = ViewData["logo"] as string ?? "";
    

    // validate error field 
    var error = ViewData["error"] as string ?? "";

    // Localization logic
    var locale = Context.Request.Query["locale"].ToString().ToLower();
    if (string.IsNullOrEmpty(locale) || (locale != "vi" && locale != "en"))
    {
        locale = "en";
    }

    var t = new Dictionary<string, Dictionary<string, string>>
    {
        ["en"] = new Dictionary<string, string>
        {
            ["title"] = "Login",
            ["heading"] = "Enter your email to join us or sign in.",
            ["tab_password"] = "Password",
            ["tab_otp"] = "Email OTP",
            ["placeholder_email"] = "Email",
            ["placeholder_password"] = "Password",
            ["terms_agreement"] = "By continuing, you agree to",
            ["privacy_policy"] = "Privacy Policy",
            ["terms_of_use"] = "Terms of Use",
            ["continue_btn"] = "CONTINUE",
            ["forgot_password"] = "Forgot Password?",
            ["create_account"] = "Don't have an account? Create one",
            ["send_otp_btn"] = "SEND OTP",
            ["verify_otp_btn"] = "LOG IN",
            ["otp_hint"] = "We will send an OTP to your email for verification.",
            ["otp_sent_to"] = "Code sent to",
            ["change_email"] = "Change email",
            ["google"] = "Google",
            ["coming_soon"] = "Coming soon",
            ["msg_enter_email"] = "Please enter your email",
            ["msg_otp_sent"] = "OTP code has been sent!",
            ["msg_send_err"] = "Could not send OTP. Please try again.",
            ["msg_conn_err"] = "Connection error. Please try again.",
            ["msg_verify_6_digit"] = "Please enter 6-digit OTP",
            ["msg_login_success"] = "Login successful! Redirecting...",
            ["msg_invalid_otp"] = "Invalid or expired OTP code."
        },
        ["vi"] = new Dictionary<string, string>
        {
            ["title"] = "Đăng nhập",
            ["heading"] = "Nhập email để tham gia hoặc đăng nhập.",
            ["tab_password"] = "Mật khẩu",
            ["tab_otp"] = "OTP qua Email",
            ["placeholder_email"] = "Email",
            ["placeholder_password"] = "Mật khẩu",
            ["terms_agreement"] = "Bằng việc tiếp tục, bạn đồng ý với",
            ["privacy_policy"] = "Chính sách bảo mật",
            ["terms_of_use"] = "Điều khoản sử dụng",
            ["continue_btn"] = "TIẾP TỤC",
            ["forgot_password"] = "Quên mật khẩu?",
            ["create_account"] = "Chưa có tài khoản? Đăng ký ngay",
            ["send_otp_btn"] = "GỬI MÃ OTP",
            ["verify_otp_btn"] = "ĐĂNG NHẬP",
            ["otp_hint"] = "Chúng tôi sẽ gửi một mã OTP đến email của bạn để xác thực.",
            ["otp_sent_to"] = "Đã gửi mã đến",
            ["change_email"] = "Thay đổi email",
            ["google"] = "Google",
            ["coming_soon"] = "Sắp ra mắt",
            ["msg_enter_email"] = "Vui lòng nhập email",
            ["msg_otp_sent"] = "Mã OTP đã được gửi!",
            ["msg_send_err"] = "Không thể gửi OTP. Vui lòng thử lại.",
            ["msg_conn_err"] = "Lỗi kết nối. Vui lòng thử lại.",
            ["msg_verify_6_digit"] = "Vui lòng nhập mã OTP 6 số",
            ["msg_login_success"] = "Đăng nhập thành công! Đang chuyển hướng...",
            ["msg_invalid_otp"] = "Mã OTP không hợp lệ hoặc đã hết hạn."
        }
    };

    string GetT(string key) => t[locale].ContainsKey(key) ? t[locale][key] : key;
}

<!DOCTYPE html>
<html lang="@locale">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@GetT("title") - @nameClient</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        body {
            font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;
        }

        .tab-active {
            border-bottom: 2px solid black;
            color: black;
        }

        .tab-inactive {
            border-bottom: 2px solid transparent;
            color: #757575;
            /* Gray-600 approx */
        }

        .tab-inactive:hover {
            color: black;
        }

        .hidden-tab {
            display: none;
        }

        /* Custom input style to match minimal vibe */
        .input-minimal {
            appearance: none;
            border: 1px solid #e5e5e5;
            border-radius: 4px;
            width: 100%;
            padding: 12px 16px;
            color: #111;
            line-height: 1.5;
            transition: border-color 0.2s;
        }

        .input-minimal:focus {
            outline: none;
            border-color: #111;
        }
    </style>
</head>


<body class="bg-white text-[#111] h-[100dvh] w-screen flex flex-col max-w-screen-sm mx-auto container px-6 sm:px-0 overflow-y-auto sm:overflow-hidden">
    <!-- Header/Logo Area -->
    <div class="py-4 flex justify-between items-center shrink-0">
        @if (!string.IsNullOrEmpty(logoClient))
        {
            <img src="@logoClient" alt="@nameClient" class="h-10 sm:h-12 -mx-4 sm:-mx-8 w-auto mix-blend-multiply" />
        }
        else
        {
            <h2 class="text-xl sm:text-2xl font-bold tracking-tight">@nameClient</h2>
        }

        <!-- Language Switcher -->
        <div class="text-xs font-medium space-x-2">
            <a href="?client_id=@idClient&callback=@callbackClient&locale=en"
                class="@(locale == "en" ? "text-black border-b border-black" : "text-gray-400 hover:text-black") transition-colors">EN</a>
            <span class="text-gray-300">|</span>
            <a href="?client_id=@idClient&callback=@callbackClient&locale=vi"
                class="@(locale == "vi" ? "text-black border-b border-black" : "text-gray-400 hover:text-black") transition-colors">VI</a>
        </div>
    </div>

    <div class="flex-1 flex flex-col justify-center py-4 sm:py-12">
        <div class="w-full">
            <div class="mb-6 sm:mb-8">
                <h1 class="text-2xl sm:text-[28px] leading-8 font-bold text-center w-full">
                    @GetT("heading")
                </h1>
            </div>
            @if (!string.IsNullOrEmpty(error))
            {
                <div class="w-full mx-auto my-6">
                    <div class="rounded bg-red-100 border-t-4 border-red-500 rounded-b text-white px-4 py-3 shadow-md my-2">
                                <p class="text-lg">@error</p>
                    </div>
                </div>
            }
            <!-- Tabs -->
            <div class="flex justify-center mb-8 space-x-8">
                <button id="tab-password" class="pb-1 text-sm font-medium tab-active transition-colors"
                    onclick="switchTab('password')">
                    @GetT("tab_password")
                </button>
                <button id="tab-otp" class="pb-1 text-sm font-medium tab-inactive transition-colors"
                    onclick="switchTab('otp')">
                    @GetT("tab_otp")
                </button>
            </div>

            <!-- Password Login Form -->
            <div id="form-password" class="space-y-6">
                <form action="/login?client_id=@idClient&callback=@callbackClient" method="POST" class="space-y-5">
                    <input type="hidden" name="locale" value="@locale" />
                    <div>
                        <input class="input-minimal" id="email" name="email" type="email"
                            placeholder="@GetT("placeholder_email")" required autofocus>
                    </div>
                    <div>
                        <input class="input-minimal" id="password" name="password" type="password"
                            placeholder="@GetT("placeholder_password")" required>
                        <div class="text-right mt-2">
                            <a href="/forgot-password?client_id=@idClient&callback=@callbackClient&locale=@locale" class="text-xs text-gray-500 hover:text-black hover:underline transition-colors">@GetT("forgot_password")</a>
                        </div>
                    </div>

                    <div class="text-xs text-gray-500 text-center leading-5 px-4">
                        @GetT("terms_agreement")
                        <a href="#" class="underline text-[#111]">@GetT("privacy_policy")</a>
                        @(locale == "en" ? "and" : "và")
                        <a href="#" class="underline text-[#111]">@GetT("terms_of_use")</a>
                        @(locale == "en" ? $"of {nameClient}." : $"của {nameClient}.")
                    </div>

                    <div class="pt-2">
                        <button
                            class="w-full bg-black hover:bg-[#333] text-white font-bold py-3.5 px-4 rounded-full transition-colors duration-200"
                            type="submit">
                            @GetT("continue_btn")
                        </button>
                    </div>

                    <div class="text-center pt-2">
                         <a href="/register?client_id=@idClient&callback=@callbackClient&locale=@locale" class="text-sm font-medium text-gray-600 hover:text-black transition-colors">@GetT("create_account")</a>
                    </div>
                </form>
            </div>

            <!-- OTP Login Form -->
            <div id="form-otp" class="space-y-6 hidden-tab">
                <div id="otp-request-section">
                    <div class="space-y-5">
                        <div>
                            <input class="input-minimal" id="otp-email" type="email"
                                placeholder="@GetT("placeholder_email")" required>
                        </div>
                        <div class="text-xs text-gray-500 text-center leading-5 px-4">
                            @GetT("otp_hint")
                        </div>
                        <div class="pt-2">
                            <button onclick="sendOtp()"
                                class="w-full bg-black hover:bg-[#333] text-white font-bold py-3.5 px-4 rounded-full transition-colors duration-200"
                                type="button">
                                @GetT("send_otp_btn")
                            </button>
                        </div>
                    </div>
                </div>

                <div id="otp-verify-section" class="space-y-6 hidden-tab">
                    <div class="text-center space-y-2">
                        <p class="text-sm">@GetT("otp_sent_to") <span id="sent-email" class="font-bold"></span></p>
                        <button onclick="resetOtpForm()"
                            class="text-xs text-gray-500 underline">@GetT("change_email")</button>
                    </div>

                    <div>
                        <input class="input-minimal text-center tracking-[0.5em] font-bold text-lg" id="otp-code"
                            type="text" maxlength="6" pattern="\d{6}" placeholder="0 0 0 0 0 0" required>
                    </div>

                    <div class="pt-2">
                        <button onclick="verifyOtp()"
                            class="w-full bg-black hover:bg-[#333] text-white font-bold py-3.5 px-4 rounded-full transition-colors duration-200"
                            type="button">
                            @GetT("verify_otp_btn")
                        </button>
                    </div>
                </div>

                <div id="otp-message" class="hidden-tab mt-4 text-center text-sm"></div>
            </div>

            <!-- Google Login Button (Disabled) -->
            <div class="mt-8 pt-6 border-t border-gray-100">
                <button disabled
                    class="w-full bg-white text-gray-400 font-medium py-3 px-4 rounded-full border border-gray-200 cursor-not-allowed flex items-center justify-center gap-2 group relative overflow-hidden"
                    type="button">
                    <span class="opacity-50 flex items-center gap-2">
                        <svg class="w-5 h-5" viewBox="0 0 24 24">
                            <path fill="currentColor"
                                d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z" />
                            <path fill="currentColor"
                                d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z" />
                            <path fill="currentColor"
                                d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z" />
                            <path fill="currentColor"
                                d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z" />
                        </svg>
                        @GetT("google")
                    </span>
                    <span
                        class="absolute right-4 text-xs bg-gray-100 text-gray-500 px-2 py-1 rounded-full">@GetT("coming_soon")</span>
                </button>
            </div>

        </div>
            
        <!-- Footer -->
        <div class="py-6 text-center">
            <p class="text-xs text-gray-400">© @DateTime.Now.Year @nameClient. All rights reserved.</p>
        </div>
    </div>


    <script>
        const API_BASE = '/api/auth';
        let currentEmail = '';

        // Localized JS messages
        const messages = {
            enterEmail: "@GetT("msg_enter_email")",
            otpSent: "@GetT("msg_otp_sent")",
            sendErr: "@GetT("msg_send_err")",
            connErr: "@GetT("msg_conn_err")",
            verify6Digit: "@GetT("msg_verify_6_digit")",
            loginSuccess: "@GetT("msg_login_success")",
            invalidOtp: "@GetT("msg_invalid_otp")"
        };

        function switchTab(tab) {
            // Update tab styles
            const tabPassword = document.getElementById('tab-password');
            const tabOtp = document.getElementById('tab-otp');
            const formPassword = document.getElementById('form-password');
            const formOtp = document.getElementById('form-otp');

            if (tab === 'password') {
                tabPassword.classList.add('tab-active');
                tabPassword.classList.remove('tab-inactive');
                tabOtp.classList.remove('tab-active');
                tabOtp.classList.add('tab-inactive');
                formPassword.classList.remove('hidden-tab');
                formOtp.classList.add('hidden-tab');
            } else {
                tabOtp.classList.add('tab-active');
                tabOtp.classList.remove('tab-inactive');
                tabPassword.classList.remove('tab-active');
                tabPassword.classList.add('tab-inactive');
                formOtp.classList.remove('hidden-tab');
                formPassword.classList.add('hidden-tab');
                resetOtpForm();
            }
        }

        function resetOtpForm() {
            document.getElementById('otp-request-section').classList.remove('hidden-tab');
            document.getElementById('otp-verify-section').classList.add('hidden-tab');
            document.getElementById('otp-message').classList.add('hidden-tab');
            document.getElementById('otp-email').value = '';
            document.getElementById('otp-code').value = '';
        }

        async function sendOtp() {
            const email = document.getElementById('otp-email').value;
            if (!email) {
                showMessage(messages.enterEmail, 'error');
                return;
            }

            currentEmail = email;

            try {
                const response = await fetch(`${API_BASE}/otp/send`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ email: email })
                });

                console.log({response})
                const data = await response.json();
                if (response.ok && data.success) {
                    document.getElementById('otp-request-section').classList.add('hidden-tab');
                    document.getElementById('otp-verify-section').classList.remove('hidden-tab');
                    document.getElementById('sent-email').textContent = email;
                    showMessage(data.data || messages.otpSent, 'success');
                } else {
                    showMessage(data.message || messages.sendErr, 'error');
                }
            } catch (error) {
                showMessage(messages.connErr, 'error');
                console.error('Error:', error);
            }
        }

        async function verifyOtp() {
            const otpCode = document.getElementById('otp-code').value;
            if (!otpCode || otpCode.length !== 6) {
                showMessage(messages.verify6Digit, 'error');
                return;
            }

            try {
                // Get client_id and callback from Razor variables
                const clientId = '@idClient';
                const callbackUrl = '@callbackClient';
                
                // Call the new external OTP verify endpoint
                const response = await fetch(`/external/otp/verify?client_id=${clientId}&callback=${encodeURIComponent(callbackUrl)}`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({
                        email: currentEmail,
                        otpCode: otpCode
                    })
                });

                const data = await response.json();

                if (response.ok && data.success) {
                    showMessage(messages.loginSuccess, 'success');

                    setTimeout(() => {
                        window.location.href = data.data;
                    }, 1000);

                } else {
                    showMessage(data.message || messages.invalidOtp, 'error');
                }
            } catch (error) {
                showMessage(messages.connErr, 'error');
                console.error('Error:', error);
            }
        }

        function showMessage(message, type) {
            const messageDiv = document.getElementById('otp-message');
            const colorClass = type === 'success' ? 'text-green-600' : 'text-red-600';

            messageDiv.innerHTML = `<span class="${colorClass}">${message}</span>`;
            messageDiv.classList.remove('hidden-tab');

            // Auto hide after 5 seconds
            setTimeout(() => {
                messageDiv.classList.add('hidden-tab');
            }, 5000);
        }

        // Auto-format OTP input
        document.getElementById('otp-code').addEventListener('input', function (e) {
            this.value = this.value.replace(/\D/g, '').substring(0, 6);
        });
    </script>
</body>

</html>