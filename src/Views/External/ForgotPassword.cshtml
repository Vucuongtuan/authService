@{
    Layout = null;
    var clientId = ViewData["client_id"] as string ?? "";
    var callback = ViewData["callback"] as string ?? "";
    var locale = ViewData["locale"] as string ?? "en";

    var t = new Dictionary<string, Dictionary<string, string>>
    {
        ["en"] = new Dictionary<string, string>
        {
            ["title"] = "Reset Password",
            ["heading"] = "Reset Password",
            ["desc_step1"] = "Enter your email to receive a reset code.",
            ["desc_step2"] = "Enter the code sent to your email and your new password.",
            ["email"] = "Email",
            ["otp"] = "6-digit Code",
            ["new_password"] = "New Password",
            ["btn_send"] = "SEND CODE",
            ["btn_reset"] = "RESET PASSWORD",
            ["back_login"] = "Back to Login",
            ["msg_sent"] = "Code sent! Check your email.",
            ["msg_success"] = "Password reset successfully! Redirecting...",
            ["msg_err"] = "Error occurred."
        },
        ["vi"] = new Dictionary<string, string>
        {
            ["title"] = "Khôi phục mật khẩu",
            ["heading"] = "Đặt lại mật khẩu",
            ["desc_step1"] = "Nhập email để nhận mã khôi phục.",
            ["desc_step2"] = "Nhập mã OTP từ email và mật khẩu mới của bạn.",
            ["email"] = "Email",
            ["otp"] = "Mã 6 số",
            ["new_password"] = "Mật khẩu mới",
            ["btn_send"] = "GỬI MÃ",
            ["btn_reset"] = "ĐẶT LẠI MẬT KHẨU",
            ["back_login"] = "Quay lại Đăng nhập",
            ["msg_sent"] = "Đã gửi mã! Vui lòng kiểm tra email.",
            ["msg_success"] = "Đổi mật khẩu thành công! Đang chuyển hướng...",
            ["msg_err"] = "Có lỗi xảy ra."
        }
    };

    string GetT(string key) => t[locale].ContainsKey(key) ? t[locale][key] : key;
}

<!DOCTYPE html>
<html lang="@locale">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@GetT("title")</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        body { font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif; }
        .input-minimal {
            appearance: none;
            border: 1px solid #e5e5e5;
            border-radius: 4px;
            width: 100%;
            padding: 12px 16px;
            color: #111;
            line-height: 1.5;
            transition: border-color 0.2s;
        }
        .input-minimal:focus { outline: none; border-color: #111; }
        .hidden-step { display: none; }
    </style>
</head>
<body class="bg-white text-[#111] h-screen w-screen flex flex-col max-w-screen-sm mx-auto container px-4">

    <div class="flex-1 flex flex-col justify-center py-12">
        <div class="mb-8 text-center">
            <h1 class="text-[28px] font-bold">@GetT("heading")</h1>
        </div>

        <div id="message-box" class="hidden w-full mx-auto mb-6 p-3 rounded text-center text-sm"></div>

        <!-- Step 1: Send OTP -->
        <div id="step-1" class="space-y-5">
            <p class="text-sm text-gray-500 text-center px-4">@GetT("desc_step1")</p>
            <div>
                <input class="input-minimal" id="email" type="email" placeholder="@GetT("email")" required>
            </div>
            <div class="pt-4">
                <button onclick="sendCode()" class="w-full bg-black hover:bg-[#333] text-white font-bold py-3.5 px-4 rounded-full transition-colors duration-200">
                    @GetT("btn_send")
                </button>
            </div>
        </div>

        <!-- Step 2: Reset Password -->
        <div id="step-2" class="space-y-5 hidden-step">
            <p class="text-sm text-gray-500 text-center px-4">@GetT("desc_step2")</p>
            <div>
                <input class="input-minimal tracking-[0.2em] text-center font-bold" id="otp" type="text" maxlength="6" placeholder="@GetT("otp")" required>
            </div>
            <div>
                <input class="input-minimal" id="new-password" type="password" placeholder="@GetT("new_password")" required>
            </div>
            <div class="pt-4">
                <button onclick="resetPassword()" class="w-full bg-black hover:bg-[#333] text-white font-bold py-3.5 px-4 rounded-full transition-colors duration-200">
                    @GetT("btn_reset")
                </button>
            </div>
        </div>

        <div class="mt-8 text-center">
            <a href="/login?client_id=@clientId&callback=@callback&locale=@locale" class="text-sm text-gray-500 hover:text-black hover:underline transition-colors">
                @GetT("back_login")
            </a>
        </div>
    </div>

    <script>
        let currentEmail = '';

        async function sendCode() {
            const email = document.getElementById('email').value;
            if(!email) return showMessage('Please enter email', 'error');

            currentEmail = email;

            try {
                const response = await fetch('/api/auth/forgot-password', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ email: email })
                });

                const data = await response.json();
                if(response.ok && data.success) {
                    showMessage("@GetT("msg_sent")", 'success');
                    document.getElementById('step-1').classList.add('hidden-step');
                    document.getElementById('step-2').classList.remove('hidden-step');
                } else {
                    showMessage(data.message || "@GetT("msg_err")", 'error');
                }
            } catch(e) { showMessage('Connection Error', 'error'); }
        }

        async function resetPassword() {
            const otp = document.getElementById('otp').value;
            const newPassword = document.getElementById('new-password').value;

            try {
                const response = await fetch('/api/auth/reset-password', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ email: currentEmail, otpCode: otp, newPassword: newPassword })
                });
                
                const data = await response.json();
                if(response.ok && data.success) {
                    showMessage("@GetT("msg_success")", 'success');
                    setTimeout(() => {
                        window.location.href = `/login?client_id=@clientId&callback=@callback&locale=@locale`;
                    }, 2000);
                } else {
                    showMessage(data.message || "@GetT("msg_err")", 'error');
                }
            } catch(e) { showMessage('Connection Error', 'error'); }
        }

        function showMessage(msg, type) {
            const box = document.getElementById('message-box');
            box.textContent = msg;
            box.className = type === 'success' 
                ? 'w-full mx-auto mb-6 p-3 rounded text-center text-sm bg-green-100 text-green-700'
                : 'w-full mx-auto mb-6 p-3 rounded text-center text-sm bg-red-100 text-red-700';
            box.classList.remove('hidden');
        }
    </script>
</body>
</html>
