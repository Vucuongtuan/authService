@model IEnumerable<authModule.Services.ClientReadDto>

@{
    ViewData["Title"] = "Manage Clients";
}

<div class="flex justify-between items-center mb-6">
    <h1 class="text-3xl font-bold text-gray-800">Clients</h1>
    <a href="/admin/clients/create" class="bg-green-600 hover:bg-green-700 text-white font-bold py-2 px-4 rounded shadow transition duration-150">
        + New Client
    </a>
</div>

<div class="bg-white shadow-md rounded-lg overflow-hidden">
    <table class="min-w-full leading-normal">
        <thead>
            <tr>
                <th class="px-5 py-3 border-b-2 border-gray-200 bg-gray-100 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">
                    Name / ID
                </th>
                <th class="px-5 py-3 border-b-2 border-gray-200 bg-gray-100 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">
                    Domain / Redirects
                </th>
                <th class="px-5 py-3 border-b-2 border-gray-200 bg-gray-100 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">
                    Secret
                </th>
                <th class="px-5 py-3 border-b-2 border-gray-200 bg-gray-100 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">
                    Created At
                </th>
                <th class="px-5 py-3 border-b-2 border-gray-200 bg-gray-100 text-right text-xs font-semibold text-gray-600 uppercase tracking-wider">
                    Actions
                </th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (var client in Model)
                {
                    <tr>
                        <td class="px-5 py-5 border-b border-gray-200 bg-white text-sm">
                            <div class="flex items-center">
                                @if(!string.IsNullOrEmpty(client.ThumbnailUri))
                                {
                                    <div class="flex-shrink-0 w-10 h-10 mr-3">
                                        <img class="w-full h-full rounded-full object-cover" src="@client.ThumbnailUri" alt="" />
                                    </div>
                                }
                                <div>
                                    <p class="text-gray-900 font-bold whitespace-no-wrap">@client.Name</p>
                                    <p class="text-gray-500 text-xs">@client.Id</p>
                                </div>
                            </div>
                        </td>
                        <td class="px-5 py-5 border-b border-gray-200 bg-white text-sm">
                            <p class="text-gray-900 whitespace-no-wrap"><a href="@client.Domain" target="_blank" class="text-blue-600 hover:underline">@client.Domain</a></p>
                            <p class="text-gray-500 text-xs truncate max-w-xs">@client.RedirectUris</p>
                        </td>
                         <td class="px-5 py-5 border-b border-gray-200 bg-white text-sm">
                            <code class="bg-gray-100 px-2 py-1 rounded text-xs text-red-500">@client.ClientSecret</code>
                        </td>
                        <td class="px-5 py-5 border-b border-gray-200 bg-white text-sm">
                            <p class="text-gray-900 whitespace-no-wrap">
                                @client.CreatedAt.ToString("yyyy-MM-dd HH:mm")
                            </p>
                        </td>
                        <td class="px-5 py-5 border-b border-gray-200 bg-white text-sm text-right">
                            <div class="flex items-center justify-end space-x-2">
                                <a href="/admin/clients/edit/@client.Id" class="text-blue-600 hover:text-blue-900 font-medium">Edit</a>
                                <form action="/admin/clients/delete/@client.Id" method="post" onsubmit="return confirm('Are you sure?');">
                                    <button type="submit" class="text-red-600 hover:text-red-900 font-medium">Delete</button>
                                </form>
                            </div>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="5" class="px-5 py-5 border-b border-gray-200 bg-white text-sm text-center text-gray-500">
                        No clients found.
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
